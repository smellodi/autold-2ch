<Page x:Class="Olfactory.Pages.OdorProduction.Setup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Olfactory.Pages.OdorProduction"
      mc:Ignorable="d" 
      d:DesignHeight="340" d:DesignWidth="600"
      Title="Setup"
      WindowTitle="Odor Production">

    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Margin" Value="0,0,8,0" />
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10"
               Style="{StaticResource PageTitle}"
               Content="Setup"/>

        <Border Grid.Row="2" Grid.Column="1"
                Style="{StaticResource Box}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="280"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                    Background="#FFD7EFFF"
                    HorizontalContentAlignment="Center"
                    Content="MFC"/>

                <Label Grid.Row="2" Grid.Column="0"
                       Style="{StaticResource Field}"
                       Content="Fresh air"/>
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" x:Name="txbFreshAir"
                             Text="5"
                             ToolTip="a single positive floating-point value"/>
                    <Label Grid.Column="1"
                           Content="l/min"/>
                </Grid>

                <Label Grid.Row="4" Grid.Column="0"
                       Style="{StaticResource Field}"
                       Content="Odor"/>
                <Grid Grid.Row="4" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="230"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Grid.Column="0" x:Name="txbOdorQuantities"
                             Text="4, 8, 16, 32, 64, 128"
                             ToolTip="comma-separated positive floating-point values or expressions in a form 'VALUExCOUNT'"/>
                    <Label Grid.Row="0" Grid.Column="1"
                           Content="ml/min"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                               TextWrapping="Wrap"
                               Text="A list of comma-separated values or expressions. Expressions are of the form 'VALUE x COUNT'. Example: '4, 8, 16x2, 32x3'"/>
                </Grid>

                <TextBlock Grid.Row="6" Grid.Column="0"
                           Style="{StaticResource Label}"
                           Text="Durations in seconds"/>
                <Grid Grid.Row="6" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="8"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="24"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Grid.Column="0"
                           Content="Initial pause"/>
                    <TextBox Grid.Row="1" Grid.Column="0" x:Name="txbInitialPause"
                             Text="3"
                             ToolTip="a non-negative integer"/>
                    <Label Grid.Row="0" Grid.Column="1"
                           Content="Odor flow"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txbOdorFlowDuration"
                             Text="3"
                             ToolTip="a positive integer"/>
                    <Label Grid.Row="0" Grid.Column="2"
                            Content="Final pause"/>
                    <TextBox Grid.Row="1" Grid.Column="2" x:Name="txbFinalPause"
                             Text="3"
                             ToolTip="a non-negative integer"/>
                </Grid>
            </Grid>
        </Border>

        <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="10" x:Name="btnStart"
            Style="{StaticResource Next}"
            Content="Start"
            Click="btnStart_Click"/>
    </Grid>
</Page>
