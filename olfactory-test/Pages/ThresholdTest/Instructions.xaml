<Page x:Class="Olfactory.Pages.ThresholdTest.Instructions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:lex="http://wpflocalizeextension.codeplex.com"
      lex:LocalizeDictionary.DesignCulture="en"
      lex:ResxLocalizationProvider.DefaultAssembly="olfactory-test"
      lex:ResxLocalizationProvider.DefaultDictionary="Resources"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="{lex:Loc Instructions}"
      WindowTitle="{lex:Loc ThresholdTest}">

    <Page.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Style="{StaticResource PageTitle}">
            <Run Text="{lex:Loc ThresholdTest}"/>
            <Run Text=" - "/>
            <Run Text="{lex:Loc Instructions}"/>
        </TextBlock>

        <ScrollViewer Grid.Row="1"
                      HorizontalAlignment="Center"
                      MaxWidth="1000"
                      Padding="24">
            <StackPanel Orientation="Vertical">
                <StackPanel.LayoutTransform>
                    <ScaleTransform x:Name="sctScale"/>
                </StackPanel.LayoutTransform>
                <TextBlock Text="{lex:Loc ThTestInstrIntro}"/>
                <TextBlock Text="{lex:Loc {Binding ProcedureInstruction, FallbackValue=ThTestInstrThreePens}}"/>
                <TextBlock Text="{lex:Loc ThTestInstrFinal}"/>
                <TextBlock Text="{lex:Loc ThTestInstrRN}" Margin="0,60"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Style="{StaticResource Next}"
                    Content="{lex:Loc Cancel}"
                    Click="Cancel_Click"/>
            <Button Style="{StaticResource Next}"
                    Content="{lex:Loc Practice}"
                    Click="Practice_Click"/>
            <Button Style="{StaticResource Next}"
                    Content="{lex:Loc FamiliarizeOdor}"
                    Click="Familiarize_Click"/>
            <Button Style="{StaticResource Next}"
                    Content="{lex:Loc StartTest}"
                    Click="Next_Click"/>
        </StackPanel>

        <Label x:Name="lblDebug" Style="{StaticResource DebugWarning}" Visibility="Collapsed"/>
    </Grid>
</Page>
