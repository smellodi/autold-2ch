<Page x:Class="Olfactory.Pages.Setup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Olfactory.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="470" d:DesignWidth="600"
      Title="Setup"
      Focusable="True"
      KeyDown="Page_KeyDown"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded">

    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource btn}">
                <Setter Property="Margin" Value="10,0" />
            </Style>
            <Style TargetType="{x:Type Label}">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style x:Key="Divider" TargetType="{x:Type Label}">
                <Setter Property="BorderThickness" Value="0,1,0,0"/>
                <Setter Property="BorderBrush" Value="#FF4D4D4D"/>
                <Setter Property="Height" Value="1"/>
            </Style>
            <Style x:Key="Value" TargetType="{x:Type Label}">
                <Setter Property="Foreground" Value="#FF1F6300"/>
                <Setter Property="Content" Value="0.0"/>
            </Style>
            <Style x:Key="Indicator" TargetType="{x:Type WrapPanel}">
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10"
               Style="{StaticResource PageTitle}"
               Content="Setup"/>

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center">
            <StackPanel.LayoutTransform>
                <ScaleTransform x:Name="sctScale2"/>
            </StackPanel.LayoutTransform>
            <Border Margin="12,0,0,12"
                Style="{StaticResource Box}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                            Style="{StaticResource Header}"
                            Content="Serial ports"/>

                    <Label Grid.Row="2" Grid.Column="0"
                            Style="{StaticResource Field}"
                            Content="MFC"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cmbMFCPort"
                                VerticalContentAlignment="Center"
                                SelectionChanged="cmbPort_SelectionChanged"/>
                    <Button Grid.Row="2" Grid.Column="2" x:Name="btnMFCToggle"
                            Click="btnMFCToggle_Click"/>

                    <Label Grid.Row="4" Grid.Column="0"
                            Style="{StaticResource Field}"
                            Content="PID"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" x:Name="cmbPIDPort"
                                VerticalContentAlignment="Center"
                                SelectionChanged="cmbPort_SelectionChanged"/>
                    <Button Grid.Row="4" Grid.Column="2" x:Name="btnPIDToggle"
                            Click="btnPIDToggle_Click"/>

                    <TextBlock Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" 
                                Margin="8,0,0,0"
                                TextWrapping="Wrap"
                                Text="Press F5 any time to show the logging window. Press F2 to simulate COM ports."/>

                </Grid>
            </Border>
            
            <Border Margin="12,0,0,12"
                Style="{StaticResource Box}">
                <Grid x:Name="grdPlayground">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                        Background="#FFD7EFFF"
                        HorizontalContentAlignment="Center"
                        Content="MFC Playground"/>

                    <Label Grid.Row="2" Grid.Column="0"
                           Style="{StaticResource Field}"
                           Content="Clean air"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="txbFreshAir"
                             VerticalContentAlignment="Center"
                             Text="5.0"
                             ToolTip="a single positive floating-point value"/>
                    <Label Grid.Row="2" Grid.Column="2"
                           Content="l/min"/>
                    <Button Grid.Row="2" Grid.Column="3"
                            Content="Set"
                            Click="btnSetFreshAir_Click"/>

                    <Label Grid.Row="4" Grid.Column="0"
                            Style="{StaticResource Field}"
                            Content="Odor"/>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="txbOdor"
                                VerticalContentAlignment="Center"
                                Text="8.0"
                                ToolTip="a single positive floating-point value"/>
                    <Label Grid.Row="4" Grid.Column="2"
                            Content="ml/min"/>
                    <Button Grid.Row="4" Grid.Column="3"
                            Content="Set"
                            Click="btnSetOdor_Click"/>

                    <Label Grid.Row="6" Grid.Column="0"
                            Style="{StaticResource Field}"
                            Content="Valve #1"/>
                    <WrapPanel Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center">
                        <RadioButton x:Name="rdbValve1ToWaste"
                                     GroupName="valve1"
                                     Content="waste"/>
                        <RadioButton x:Name="rdbValve1ToSystem" Margin="16,0,0,0"
                                     GroupName="valve1"
                                     Content="system"/>
                    </WrapPanel>
                    <Button Grid.Row="6" Grid.Column="3" Grid.RowSpan="3"
                            Content="Set"
                            Click="btnSetDirection_Click"/>
                    
                    <Label Grid.Row="8" Grid.Column="0"
                            Style="{StaticResource Field}"
                            Content="Valve #2"/>
                    <WrapPanel Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Center">
                        <RadioButton x:Name="rdbValve2ToWaste"
                                     GroupName="valve2"
                                     Content="waste"/>
                        <RadioButton x:Name="rdbValve2ToUser" Margin="16,0,0,0"
                                     GroupName="valve2"
                                     Content="user"/>
                    </WrapPanel>
                </Grid>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="1" x:Name="stpMeasurements"
                    Margin="12,0">
            <StackPanel.LayoutTransform>
                <ScaleTransform x:Name="sctScale1"/>
            </StackPanel.LayoutTransform>

            <Label Style="{StaticResource Divider}"/>
            <WrapPanel Style="{StaticResource Indicator}">
                <Label Content="Clean air (l/min)"/>
                <Label x:Name="lblMFC_FreshAir" Style="{StaticResource Value}"/>
            </WrapPanel>

            <Label Style="{StaticResource Divider}"/>
            <WrapPanel Style="{StaticResource Indicator}">
                <Label Content="Odor (ml/min)"/>
                <Label x:Name="lblMFC_OdorFlow" Style="{StaticResource Value}"/>
            </WrapPanel>
            <local:LiveData x:Name="lmsOdor"
                            Height="92"/>

            <Label Style="{StaticResource Divider}"
                   Margin="0,12,0,0"/>
            <WrapPanel Style="{StaticResource Indicator}">
                <Label Content="PID loop (mA)"/>
                <Label x:Name="lblPID_Loop" Style="{StaticResource Value}"/>
            </WrapPanel>

            <Label Style="{StaticResource Divider}"/>
            <WrapPanel Style="{StaticResource Indicator}">
                <Label Content="PID value (mV)"/>
                <Label x:Name="lblPID_PID" Style="{StaticResource Value}"/>
            </WrapPanel>
            <local:LiveData x:Name="lmsPIDValue"
                            Height="118"/>
        </StackPanel>

        <WrapPanel Grid.Row="4" Grid.Column="0"
                   Style="{StaticResource Buttons}">
            <Button x:Name="btnOdorProduction"
                Style="{StaticResource Next}"
                Content="Odor Production"
                Click="btnOdorProduction_Click"/>
            <Button x:Name="btnThresholdTest"
                Style="{StaticResource Next}"
                Content="Threshold Test"
                Click="btnThresholdTest_Click"/>
        </WrapPanel>

        <Label x:Name="lblDebug" Style="{StaticResource DebugWarning}" Visibility="Collapsed"/>
    </Grid>
</Page>
