<Page x:Class="Olfactory.Pages.Setup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Olfactory.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="600"
      Title="Setup"
      Focusable="True"
      KeyDown="On_KeyDown"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="10,0,0,0" />
            </Style>
            <Style x:Key="Field" TargetType="{x:Type Label}">
                <Setter Property="Margin" Value="8,0" />
            </Style>
        </Grid.Resources>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="210"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" 
               Grid.ColumnSpan="10"
               Style="{StaticResource PageTitle}"
               Margin="0,0,0,12"
               Content="Setup"/>

        <Label Grid.Row="1" Grid.Column="0" Style="{StaticResource Field}">MFC</Label>
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cmbMFCPort" SelectionChanged="OnPort_SelectionChanged"></ComboBox>
        <Button Grid.Row="1" Grid.Column="2" x:Name="btnMFCToggle"
                Click="OnMFCToggle_Click"/>

        <Label Grid.Row="3" Grid.Column="0" Style="{StaticResource Field}">PID</Label>
        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="cmbPIDPort" SelectionChanged="OnPort_SelectionChanged"></ComboBox>
        <Button Grid.Row="3" Grid.Column="2" x:Name="btnPIDToggle"
                Click="OnPIDToggle_Click"/>

        <Label Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" 
               Style="{StaticResource Field}"
               VerticalAlignment="Bottom"
               Content="Press F5 any time to open a debug window"/>

        <Border Grid.Row="1" Grid.Column="4" Grid.RowSpan="5"
                Margin="0,0,12,0"
                BorderBrush="#80000000"
                BorderThickness="1">
            <Grid x:Name="grdPlayground">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                       Background="#FFD7EFFF"
                       HorizontalContentAlignment="Center"
                       Content="MFC Playground"/>

                <Label Grid.Row="2" Grid.Column="0">Fresh air</Label>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="txbFreshAir"
                            VerticalContentAlignment="Center"
                            Text="5.0"/>
                <Button Grid.Row="2" Grid.Column="2"
                        Content="Set"
                        Click="btnSetFreshAir_Click"/>

                <Label Grid.Row="4" Grid.Column="0">Odor</Label>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="txbOdor"
                            VerticalContentAlignment="Center"
                            Text="8"/>
                <Button Grid.Row="4" Grid.Column="2" Height="26" Grid.RowSpan="2"
                        VerticalAlignment="Top"
                        Content="Set"
                        Click="btnSetOdor_Click"/>

                <Label Grid.Row="6" Grid.Column="0">Direction</Label>
                <ComboBox Grid.Row="6" Grid.Column="1" x:Name="cmbDirection"
                          VerticalContentAlignment="Center"
                          IsReadOnly="True">
                    <ComboBoxItem Content="none"/>
                    <ComboBoxItem Content="to waste" IsSelected="True"/>
                    <ComboBoxItem Content="to user"/>
                </ComboBox>
                <Button Grid.Row="6" Grid.Column="2"
                        Content="Set"
                        Click="btnSetDirection_Click"/>
            </Grid>
        </Border>
        
        <Button Grid.Row="7" Grid.Column="4" x:Name="btnNext"
                Style="{StaticResource Next}"
                Content="Threshold Test"
                Click="OnThresholdTest_Click"/>
    </Grid>
</Page>
