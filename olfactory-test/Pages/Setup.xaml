<Page x:Class="Olfactory.Pages.Setup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Olfactory.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Setup"
      Focusable="True"
      KeyDown="Page_KeyDown"
      Loaded="Page_Loaded">

    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Margin" Value="10,0" />
            </Style>
            <Style x:Key="Field" TargetType="{x:Type Label}">
                <Setter Property="Margin" Value="4,0" />
            </Style>
            <Style x:Key="Header" TargetType="{x:Type Label}">
                <Setter Property="Background" Value="#FFD7EFFF"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
            </Style>
            <Style x:Key="Box" TargetType="{x:Type Border}">
                <Setter Property="BorderBrush" Value="#80000000"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Margin" Value="4,10"/>
                <Setter Property="Padding" Value="0,0,0,10"/>
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10"
               Style="{StaticResource PageTitle}"
               Content="Setup"/>

        <StackPanel Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Orientation="Vertical">
            <Border
                Style="{StaticResource Box}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                           Style="{StaticResource Header}"
                           Content="Serial ports"/>

                    <Label Grid.Row="2" Grid.Column="0"
                           Style="{StaticResource Field}"
                           Content="MFC"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cmbMFCPort"
                              SelectionChanged="cmbPort_SelectionChanged"/>
                    <Button Grid.Row="2" Grid.Column="2" x:Name="btnMFCToggle"
                            Click="btnMFCToggle_Click"/>

                    <Label Grid.Row="4" Grid.Column="0"
                           Style="{StaticResource Field}"
                           Content="PID"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" x:Name="cmbPIDPort"
                              SelectionChanged="cmbPort_SelectionChanged"/>
                    <Button Grid.Row="4" Grid.Column="2" x:Name="btnPIDToggle"
                            Click="btnPIDToggle_Click"/>

                    <Label Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" 
                           Style="{StaticResource Field}"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"
                           Content="Press F5 any time to open a debug window"/>

                </Grid>
            </Border>
            
            <Border
                Style="{StaticResource Box}">
                <Grid x:Name="grdPlayground">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                       Background="#FFD7EFFF"
                       HorizontalContentAlignment="Center"
                       Content="MFC Playground"/>

                    <Label Grid.Row="2" Grid.Column="0"
                           Style="{StaticResource Field}"
                           Content="Fresh air"/>
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" x:Name="txbFreshAir"
                            VerticalContentAlignment="Center"
                            Text="5.0"/>
                        <Label Grid.Column="1"
                               Content="l/min"/>
                    </Grid>
                    <Button Grid.Row="2" Grid.Column="2"
                        Content="Set"
                        Click="btnSetFreshAir_Click"/>

                    <Label Grid.Row="4" Grid.Column="0"
                           Style="{StaticResource Field}"
                           Content="Odor"/>
                    <Grid Grid.Row="4" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" x:Name="txbOdor"
                            VerticalContentAlignment="Center"
                            Text="8.0"/>
                        <Label Grid.Column="1"
                               Content="ml/min"/>
                    </Grid>
                    <Button Grid.Row="4" Grid.Column="2" Height="26" Grid.RowSpan="2"
                        VerticalAlignment="Top"
                        Content="Set"
                        Click="btnSetOdor_Click"/>

                    <Label Grid.Row="6" Grid.Column="0"
                           Style="{StaticResource Field}"
                           Content="Direction"/>
                    <ComboBox Grid.Row="6" Grid.Column="1" x:Name="cmbDirection"
                          VerticalContentAlignment="Center"
                          IsReadOnly="True">
                        <ComboBoxItem Content="none"/>
                        <ComboBoxItem Content="to waste" IsSelected="True"/>
                        <ComboBoxItem Content="to user"/>
                    </ComboBox>
                    <Button Grid.Row="6" Grid.Column="2"
                        Content="Set"
                        Click="btnSetDirection_Click"/>
                </Grid>
            </Border>
        </StackPanel>
        
        <Button Grid.Row="4" Grid.Column="2" x:Name="btnNext"
                Style="{StaticResource Next}"
                Content="Threshold Test"
                Click="btnThresholdTest_Click"/>
    </Grid>
</Page>
